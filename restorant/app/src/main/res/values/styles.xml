<resources>

    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Checkbox -->
    <style name="checkBox" parent="Theme.AppCompat.Light">
        <!-- selected Checkbox color -->
        <item name="colorAccent">@android:color/holo_green_light</item>
        <!-- default/unselected Checkbox color -->
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>
    <color name="color1">#424549</color>
    <color name="color2">#7e455e</color>
    <color name="color3">#796e25</color>
    <color name="color4">#59717c</color>
</resources>
